<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CONVERSOR Q</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { background-color: #002d72; font-family: sans-serif; } /* Azul Quilmes */
        .card { background: white; border-radius: 15px; box-shadow: 0 4px 15px rgba(0,0,0,0.2); }
    </style>
</head>
<body class="p-4">
    <div class="max-w-md mx-auto">
        <h1 class="text-white text-center text-2xl font-bold mb-4 italic">CONVERSOR Q</h1>
        
        <div class="card p-6">
            <label class="block text-sm font-bold text-gray-700 mb-1">Categoría</label>
            <select id="cat" class="w-full p-3 border rounded-lg mb-4 bg-gray-50" onchange="actualizarProductos()">
                <option value="CVZ">CERVEZAS (CVZ)</option>
                <option value="UNG">GASEOSAS (UNG)</option>
                <option value="AGUAS">AGUAS</option>
            </select>

            <label class="block text-sm font-bold text-gray-700 mb-1">Producto / Envase</label>
            <select id="prod" class="w-full p-3 border rounded-lg mb-6 bg-gray-50" onchange="calcular()">
                </select>

            <hr class="mb-6">

            <div class="mb-4">
                <label class="block text-sm font-bold text-blue-800">Bultos (Cajas/Packs)</label>
                <input type="number" id="bultos" placeholder="0" class="w-full p-4 text-2xl border-2 border-blue-200 rounded-xl focus:border-blue-500 outline-none" oninput="convertirABultos()">
            </div>

            <div class="mb-2">
                <label class="block text-sm font-bold text-green-700">Hectolitros (HL)</label>
                <input type="number" id="hl" placeholder="0.00" class="w-full p-4 text-2xl border-2 border-green-200 rounded-xl focus:border-green-500 outline-none" oninput="convertirAHL()">
            </div>
            
            <p class="text-center text-gray-400 text-xs mt-4">Calculado según coeficientes oficiales</p>
        </div>
    </div>

    <script>
        const precios = {
            "CVZ": {
                "Botella 1L x12": 0.12, "Botella 730cc x6": 0.04, "Botella 710cc x12": 0.09,
                "Latón 710cc x4": 0.03, "Latón 710cc x16": 0.11, "Lata 473cc x6": 0.03,
                "Lata 473cc x24": 0.11, "Botella 340cc x24": 0.08, "Botella 330cc x6": 0.02, "Botella 330cc x24": 0.08
            },
            "UNG": {
                "Botella 3L x6": 0.18, "Botella 2.25L x8": 0.18, "Botella 2L x8": 0.16,
                "Botella 1.5L x6": 0.09, "Botella 1.25L x6": 0.08, "Botella 750cc x6": 0.05,
                "Botella 500cc x6": 0.03, "Botella 500cc x12": 0.06, "Lata 354cc x6": 0.02,
                "Lata 354cc x24": 0.08, "Lata 355cc x4": 0.01, "Lata 355cc x24": 0.08,
                "Lata 269cc x6": 0.02, "Lata 269cc x24": 0.06, "Lata 250cc x4": 0.01, "Lata 250cc x24": 0.06
            },
            "AGUAS": {
                "Bidón 3.6L x2": 0.07, "Botella 2.25L x6": 0.14, "Botella 2L x6": 0.12,
                "Botella 1.5L x6": 0.09, "Botella 1L x6": 0.06, "Botella 750cc x6": 0.05, "Botella 500cc x12": 0.06
            }
        };

        function actualizarProductos() {
            const cat = document.getElementById('cat').value;
            const prodSelect = document.getElementById('prod');
            prodSelect.innerHTML = '';
            for (let p in precios[cat]) {
                let opt = document.createElement('option');
                opt.value = precios[cat][p];
                opt.innerHTML = p;
                prodSelect.appendChild(opt);
            }
            calcular();
        }

        function convertirABultos() {
            const factor = parseFloat(document.getElementById('prod').value);
            const bultos = document.getElementById('bultos').value;
            if(bultos) document.getElementById('hl').value = (bultos * factor).toFixed(3);
            else document.getElementById('hl').value = '';
        }

        function convertirAHL() {
            const factor = parseFloat(document.getElementById('prod').value);
            const hl = document.getElementById('hl').value;
            if(hl) document.getElementById('bultos').value = (hl / factor).toFixed(1);
            else document.getElementById('bultos').value = '';
        }

        function calcular() {
            convertirABultos();
        }

        // Iniciar
        actualizarProductos();
    </script>
</body>
</html>
